<?import bfst.canvas.MapCanvasWrapper?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Open…" fx:id="loadClick"/>
            <Menu mnemonicParsing="false" text="Resources">
              <items>
                <MenuItem text="samsoe.bin" fx:id="loadDefaultMap"/>
              </items>
            </Menu>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Save As…" fx:id="saveAs"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Dev Tools" fx:id="devtools">
            <items>
                <MenuItem mnemonicParsing="false" text="Open Dev Tools..." />
            </items>
        </Menu>
      </menus>
    </MenuBar>
    <StackPane VBox.vgrow="ALWAYS" fx:id="stackPane">
        <MapCanvasWrapper fx:id="mapCanvasWrapper"/>

